<!-- JDE format XML example -->
<jde-content>

    <import file="res/test_level/hitboxes.xml" />

    <import file="res/sprites/sprites.xml" />

    <import file="res/test_level/sprites.xml" />

    <import file="res/test_level/movements.xml" />

    <import file="res/test_level/bullets.xml" />

    <wave
        name="wave_butterfly"
        bullets="10" >

        <bullet-ref ref="butterfly" />

        <vertex
            x="0"
            y="50" />
        
        <direction-modifier />
        
        <direction-modifier />
        
        <direction-modifier accelerationstart="0" accelerationend="35"/>
    </wave>

    <horde name="horde_butterfly" >

        <wave-ref ref="wave_butterfly" />

        <wave-ref ref="wave_butterfly" />

        <wave-ref ref="wave_butterfly" />

        <wave-ref ref="wave_butterfly" />

        <wave-ref ref="wave_butterfly" />

        <wave-ref ref="wave_butterfly" />

        <wave-ref ref="wave_butterfly" />

        <wave-ref ref="wave_butterfly" />
    </horde>

    <enemy
        name="enemy_ghost_up"
        health="100" >

        <hitbox-ref ref="hitbox_ghost" />

        <sprite-ref ref="sprite_ghost" />

        <movement-ref ref="move_ghost_up" />

        <horde-ref ref="horde_butterfly" />
    </enemy>

    <game name="game_name" >

        <spawn time="2000" >

            <vertex
                x="0"
                y="-100" />

            <enemy-ref ref="enemy_ghost_up" />
        </spawn>
    </game>

</jde-content>