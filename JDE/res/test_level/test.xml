<!-- JDE format XML example -->
<jde-content>

    <import file="res/test_level/hitboxes.xml" />

    <import file="res/sprites/sprites.xml" />

    <import file="res/test_level/sprites.xml" />

    <import file="res/test_level/movements.xml" />

    <import file="res/test_level/bullets.xml" />

    <!-- Butterfly horde -->
    
    <wave
        name="wave_butterfly_clockwise"
        bullets="8" >

        <bullet-ref ref="butterfly" />

        <direction-modifier />

        <direction-modifier
            accelerationend="100"
            accelerationstart="0" />
    </wave>
    
        <wave
        name="wave_butterfly_counterclockwise"
        bullets="8" >

        <bullet-ref ref="butterfly" />

        <direction-modifier rotationstart="-240" rotationend="-240"/>

        <direction-modifier
            accelerationend="100"
            accelerationstart="0" />
    </wave>

    <wave name="wave_butterflies_clockwise" >

        <vertex
            x="0"
            y="50" />

        <direction-modifier
            angleend="360"
            anglestart="0" />

        <wave-ref ref="wave_butterfly_clockwise" />

        <wave-ref ref="wave_butterfly_clockwise" />

        <wave-ref ref="wave_butterfly_clockwise" />

        <wave-ref ref="wave_butterfly_clockwise" />

        <wave-ref ref="wave_butterfly_clockwise" />

        <wave-ref ref="wave_butterfly_clockwise" />

        <wave-ref ref="wave_butterfly_clockwise" />

        <wave-ref ref="wave_butterfly_clockwise" />

        <wave-ref ref="wave_butterfly_clockwise" />

        <wave-ref ref="wave_butterfly_clockwise" />
    </wave>
    
    <wave name="wave_butterflies_counterclockwise" >

        <vertex
            x="0"
            y="50" />

        <direction-modifier
            angleend="0"
            anglestart="360" />

        <wave-ref ref="wave_butterfly_counterclockwise" />

        <wave-ref ref="wave_butterfly_counterclockwise" />

        <wave-ref ref="wave_butterfly_counterclockwise" />

        <wave-ref ref="wave_butterfly_counterclockwise" />

        <wave-ref ref="wave_butterfly_counterclockwise" />

        <wave-ref ref="wave_butterfly_counterclockwise" />

        <wave-ref ref="wave_butterfly_counterclockwise" />

        <wave-ref ref="wave_butterfly_counterclockwise" />

        <wave-ref ref="wave_butterfly_counterclockwise" />

        <wave-ref ref="wave_butterfly_counterclockwise" />
    </wave>

    <horde name="horde_butterfly" >

        <wave-ref ref="wave_butterflies_clockwise" />
        
        <wave-ref ref="wave_butterflies_counterclockwise" />
    </horde>

    <enemy
        name="enemy_butterfly"
        health="100" >

        <hitbox-ref ref="hitbox_ghost" />

        <sprite-ref ref="sprite_ghost" />

        <movement-ref ref="move_ghost_up" />

        <horde-ref ref="horde_butterfly" />
    </enemy>
    
    <!-- Circular waved horde -->
    
    <wave
        name="wave_arc"
        bullets="4" >

        <bullet-ref ref="arc" />

        <direction-modifier anglestart="0" angleend="30" />

        <direction-modifier />
        
        <direction-modifier anglestart="45" angleend="-15" />
    </wave>
    
    <wave
        name="wave_arcs"
        bullets="12" >
        
        <direction-modifier
            angleend="360"
            anglestart="0" />

        <wave-ref ref="wave_arc" />
        <wave-ref ref="wave_arc" />
        <wave-ref ref="wave_arc" />
        <wave-ref ref="wave_arc" />
        <wave-ref ref="wave_arc" />
        <wave-ref ref="wave_arc" />
        <wave-ref ref="wave_arc" />
        <wave-ref ref="wave_arc" />
        <wave-ref ref="wave_arc" />
        <wave-ref ref="wave_arc" />
        <wave-ref ref="wave_arc" />
        <wave-ref ref="wave_arc" />
        
    </wave>
    
    <horde name="horde_arc" >

        <wave-ref ref="wave_arcs" />
    </horde>
    
    <enemy
        name="enemy_arc"
        health="100" >

        <hitbox-ref ref="hitbox_ghost" />

        <sprite-ref ref="sprite_ghost" />

        <movement-ref ref="move_ghost_up" />

        <horde-ref ref="horde_arc" />
    </enemy>

    <!-- Game -->
    
    <game name="game_name" >

        <spawn time="6000" >

            <vertex
                x="0"
                y="-100" />

            <enemy-ref ref="enemy_butterfly" />
        </spawn>
        
        <spawn time="2000" >

            <vertex
                x="0"
                y="100" />

            <enemy-ref ref="enemy_arc" />
        </spawn>
    </game>

</jde-content>