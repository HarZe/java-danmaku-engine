<!-- JDE format XML example -->
<jde-content>

    <import file="res/test_level/hitboxes.xml" />

    <import file="res/sprites/sprites.xml" />
    <import file="res/test_level/sprites.xml" />

    <import file="res/test_level/movements.xml" />

    <import file="res/test_level/bullets.xml" />

    <horde
        name="horde_bullet_clockwise"
        angleend="360"
        anglestart="0"
        bullets="24"
        repeat="yes"
        interval="2000"
        timeend="1100"
        timestart="100" >

        <bullet-ref ref="bullet_bullet" />
    </horde>
    
    <horde
        name="horde_bullet_counterclockwise"
        angleend="-180"
        anglestart="180"
        bullets="24"
        interval="2000"
        repeat="yes"
        timeend="1100"
        timestart="100" >

        <bullet-ref ref="bullet_bullet" />
    </horde>

    <enemy
        name="enemy_ghost_left"
        health="100" >

        <hitbox-ref ref="hitbox_ghost" />

        <sprite-ref ref="sprite_ghost" />

        <movement-ref ref="move_ghost_left" />

        <horde-ref ref="horde_bullet_counterclockwise" />
    </enemy>
    
    <enemy
        name="enemy_ghost_right"
        health="100" >

        <hitbox-ref ref="hitbox_ghost" />

        <sprite-ref ref="sprite_ghost" />

        <movement-ref ref="move_ghost_right" />

        <horde-ref ref="horde_bullet_clockwise" />
    </enemy>
    
    <enemy
        name="enemy_ghost_up"
        health="100" >

        <hitbox-ref ref="hitbox_ghost" />

        <sprite-ref ref="sprite_ghost" />

        <movement-ref ref="move_ghost_up" />

        <horde-ref ref="horde_bullet_clockwise" />
    </enemy>

    <game name="game_name" >

        <spawn
            time="2000"
            x="200"
            y="200" >

            <enemy-ref ref="enemy_ghost_up" />
        </spawn>

        <spawn
            time="5000"
            x="250"
            y="100" >

            <enemy-ref ref="enemy_ghost_right" />
        </spawn>

        <spawn
            time="5000"
            x="150"
            y="100" >

            <enemy-ref ref="enemy_ghost_left" />
        </spawn>
    </game>

</jde-content>
