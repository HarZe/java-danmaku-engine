<jde-content>
    
    <spritesheet
        name="touhou_hud"
        file="res/sprites/touhou/touhou_spritesheet_hud.png" />
    
    <spritesheet
        name="touhou_fonts"
        file="res/sprites/touhou/touhou_spritesheet_fonts.png" />
    
    <!-- Borders -->
    
    <sprite
        name="touhou_left_bar" sheet="touhou_hud"
        x="0" y="0" w="64" h="960" scaling="0.5" />
    
    <sprite
        name="touhou_right_bar" sheet="touhou_hud"
        x="64" y="0" w="448" h="960" scaling="0.5" />
    
    <sprite
        name="touhou_top_bar" sheet="touhou_hud"
        x="0" y="960" w="768" h="32" scaling="0.5" />
    
    <sprite
        name="touhou_bottom_bar" sheet="touhou_hud"
        x="0" y="992" w="768" h="32" scaling="0.5" />
        
    <sprite
        name="touhou_score_names" sheet="touhou_hud"
        x="512" y="0" w="192" h="150" scaling="0.5" />
        
    <!-- Score numbers -->
    
    <sprite
        name="touhou_score_number_0" sheet="touhou_fonts"
        x="4" y="432" w="24" h="32" scaling="0.5" />
        
    <sprite
        name="touhou_score_number_1" sheet="touhou_fonts"
        x="36" y="432" w="24" h="32" scaling="0.5" />
        
    <sprite
        name="touhou_score_number_2" sheet="touhou_fonts"
        x="68" y="432" w="24" h="32" scaling="0.5" />
        
    <sprite
        name="touhou_score_number_3" sheet="touhou_fonts"
        x="100" y="432" w="24" h="32" scaling="0.5" />
        
    <sprite
        name="touhou_score_number_4" sheet="touhou_fonts"
        x="132" y="432" w="24" h="32" scaling="0.5" />
        
    <sprite
        name="touhou_score_number_5" sheet="touhou_fonts"
        x="164" y="432" w="24" h="32" scaling="0.5" />
        
    <sprite
        name="touhou_score_number_6" sheet="touhou_fonts"
        x="196" y="432" w="24" h="32" scaling="0.5" />
        
    <sprite
        name="touhou_score_number_7" sheet="touhou_fonts"
        x="228" y="432" w="24" h="32" scaling="0.5" />
        
    <sprite
        name="touhou_score_number_8" sheet="touhou_fonts"
        x="260" y="432" w="24" h="32" scaling="0.5" />
        
    <sprite
        name="touhou_score_number_9" sheet="touhou_fonts"
        x="292" y="432" w="24" h="32" scaling="0.5" />
        
    <sprite
        name="touhou_score_number_/" sheet="touhou_fonts"
        x="324" y="432" w="24" h="32" scaling="0.5" />
        
    <sprite
        name="touhou_score_number_." sheet="touhou_fonts"
        x="356" y="432" w="24" h="32" scaling="0.5" />
        
    <!-- Score numbers pseudo-font -->
    
    <pseudo-font name="score" >
    	<char value="0">
    		<sprite-ref ref="touhou_score_number_0" />
    	</char>
    	
    	<char value="1">
    		<sprite-ref ref="touhou_score_number_1" />
    	</char>
    	
    	<char value="2">
    		<sprite-ref ref="touhou_score_number_2" />
    	</char>
    	
    	<char value="3">
    		<sprite-ref ref="touhou_score_number_3" />
    	</char>
    	
    	<char value="4">
    		<sprite-ref ref="touhou_score_number_4" />
    	</char>
    	
    	<char value="5">
    		<sprite-ref ref="touhou_score_number_5" />
    	</char>
    	
    	<char value="6">
    		<sprite-ref ref="touhou_score_number_6" />
    	</char>
    	
    	<char value="7">
    		<sprite-ref ref="touhou_score_number_7" />
    	</char>
    	
    	<char value="8">
    		<sprite-ref ref="touhou_score_number_8" />
    	</char>
    	
    	<char value="9">
    		<sprite-ref ref="touhou_score_number_9" />
    	</char>
    	
    	<char value="/">
    		<sprite-ref ref="touhou_score_number_/" />
    	</char>
    	
    	<char value=".">
    		<sprite-ref ref="touhou_score_number_." />
    	</char>
    
    </pseudo-font>
    
</jde-content>